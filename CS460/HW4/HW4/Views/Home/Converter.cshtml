
@{
    ViewBag.Title = "Mile to Metric Converter";
}

<h2>Convert Miles to Metric</h2>

<div class="row">
    <div class="col-md-6">
        <label for="input">Miles</label>
        <form action="/action_page.php">
            <input name="input" type="text">
        </form>
    </div>
    <div class="col-md-6">
        <h3>Select a unit</h3>
        <input type="radio" id="millimeters" checked />
        <label for="millimeters">millimeters</label>
        <br />

        <input type="radio" id="centimeters" />
        <label for="millimeters">centimeters</label>
        <br />


        <input type="radio" id="meters" />
        <label for="millimeters">meters</label>
        <br />

        <input type="radio" id="kilometers" />
        <label for="millimeters">kilometers</label>
    </div>
</div>
<br />
<br />
<div class="row">
    <center><p><button class="btn btn-primary btn-lg">Convert</button></p></center>
</div>
