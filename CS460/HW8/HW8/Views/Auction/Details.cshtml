@model HW8.Models.DetailsModel

@{
    ViewBag.Title = "Details";
}

<div class="jumbotron">
    <center>
        <h1>REGINALD'S ANCIENT ANTIQUITIES AUCTION HOUSE</h1>
    </center>
</div>

<h2>Auction Item Details:</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Seller Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModelItem.Seller1.Name)
        </dd>

        <dt>
            @Html.DisplayName("Item Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModelItem.Name)
        </dd>

        <dt>
            @Html.DisplayName("Item Description")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModelItem.Description)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit Item", "Edit", new { id = Model.ModelItem.ID }) |
    @Html.ActionLink("Back to Item List", "IndexList")
</p>
